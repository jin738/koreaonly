@model IEnumerable<KoreaOnly.CheapFlights>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/AdminView.cshtml";
}


<div style="margin-top:20px;"></div>



<div class="container">
    <br />
    <a href="/SystemMaster/" class="btn btn-default" value="Go To Main Control Station">Go To Main Control Station</a>
    <br />
    <br />
    <h2 style="float:left;">Cheap Flights</h2>
    <br />

    <hr />
    <br />

    <p style="float:right;">
        @Html.ActionLink("Add New Cheap Flight", "Create")
    </p>

    <table class="table">
        <tr>

            <th>
                Dept. Code
            </th>
            <th>
                Arrival Code
            </th>
            <th>
                Departure Airport
            </th>
            <th>
                Arrival Airport
            </th>
            <th>
                Departure Date
            </th>
            <th>
                Airline Code
            </th>
            <th>
                Price
            </th>
            <th>
                Active / De-Active
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>

                <td>
                    @Html.DisplayFor(modelItem => item.DepartureCode)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.AirportCode)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DeptShortName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ArrvShortName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DepartureDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.AirlineCode)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Price)
                </td>
                <td>
                    <label>@(item.isactive == "True" ? "Active" : "De-Active" )</label>
                </td>
                <td>
                    @Html.ActionLink("Active/De-Active", "Mark", new { id = item.ID, currentstatus = item.isactive }) <br/>
                    @Html.ActionLink("Update", "Update", new { id = item.ID }) <br/>
                    @Html.ActionLink("Delete", "Delete", new { id = item.ID })
                </td>
            </tr>
        }

    </table>

</div>