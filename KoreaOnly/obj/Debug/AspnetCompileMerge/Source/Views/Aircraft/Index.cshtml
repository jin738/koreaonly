@model List<KoreaOnly.AircraftType>

@{
    ViewBag.Title = "All Aircraft";
    Layout = "~/Views/AdminView.cshtml";
}


<div class="container">
    <br />
    <a href="/SystemMaster/" class="btn btn-default" value="Go To Main Control Station">Go To Main Control Station</a>

    <br />
    <h2 style="float:left;">Aircraft</h2>
    <br />

    <hr />
    <br />
    @using (Html.BeginForm())
    {

        <label for="txtSearch">Aircraft Code</label>
        <input type="text" name="txtSearch" style="max-width:200px;" class="form-control" />
        <input type="submit" class="btn btn-default" value="Search" />

    }
    <br />
    <p style="float:right;">        
        @Html.ActionLink("Add New Aircraft", "Create")
    </p>

    <table class="table">
        <tr>
            <th>
                Aircraft Code
            </th>
            <th>
                Aircraft Type
            </th>
            <th>
                Aircraft Name / Description
            </th>
            <th></th>
        </tr>



        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Code)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Type)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Description)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { aircode = item.Code }) |
                    @Html.ActionLink("Delete", "Delete", new { aircode = item.Code })
                </td>
            </tr>
        }

    </table>
</div>